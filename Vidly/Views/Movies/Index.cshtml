@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@*<a href="/movies/new" class="btn btn-primary">Add Movie</a>*@
@Html.ActionLink("Add Movie", "New", null, new { @class = "btn btn-primary" })
@if (Model.Count() == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Genre)</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Name)*@
                    @Html.ActionLink(item.Name, "Edit", "Movies", new { id = item.Id }, null)
                </td>
                <td>
                    @item.Genre.Name
                </td>
            </tr>
        }
    </table>
}
