@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@*<a href="/movies/new" class="btn btn-primary">Add Movie</a>*@
@Html.ActionLink("Add Movie", "New", null, new { @class = "btn btn-primary" })
@if (Model.Count() == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table" id="movies">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Genre)</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
}

@section scripts{
    <script>
        $(document).ready(function () {

            const table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return `<a href="/movies/edit/${movie.id}"> ${movie.name} </a>`
                        }
                    }, {
                        data: "genre.name",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `<button class="btn-link js-delete" data-movie-id="${data}">Delete</button>`
                        }
                    }
                ]
            })

            $("#movies").on("click", ".js-delete", function () {

                var btn = $(this)

                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: `/api/movies/${$(btn).attr("data-movie-id")}`,
                            method: "DELETE",
                            success: function () {
                                table.row(btn.parents("tr")).remove().draw();
                            }
                        })
                    }
                })
            })

        })
    </script>
}
