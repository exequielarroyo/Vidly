@model IEnumerable<Vidly.Models.MovieModel>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@if (Model.Count() == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </table>
}
